<div class="row">
    <div class="text-center">
        <h2 class="vq-text-color-primary" style="padding-bottom: 25px;"><%- translate("START_PAGE_LISTING_CATEGORIES_HEADER") %></h2>
        <p class="text-muted"><%- translate("START_PAGE_LISTING_CATEGORIES_DESC") %></p>
    </div>	
    <% categories.forEach((category, index) => { %>
        <% if ((index + 1)  % 3 === 0) { %>
            <div class="row">
        <% } %>
        
        <div class="col-xs-12 col-sm-6 col-md-4">
            <a style="text-decoration: none;" ng-href="<% userType === 1 ? '/app/new-listing?category=' + category.code : '/app?category=' + category.code %>">
                <md-card>
                    <img class="md-card-image" ng-src="<%- category.imageUrl || '/images/category-default-img.jpeg' %>" alt="<%- category.label %>">
                    <md-card-title>
                        <md-card-title-text>
                            <span class="md-headline"><%- category.label %></span>
                        </md-card-title-text>
                    </md-card-title>
                    <md-card-content>
                        <p>
                           <%- category.desc %>
                        </p>
                    </md-card-content>
                </md-card>
            </a>
        </div>
        <% if ((index + 1) % 3 === 0) { %>
             </div>
        <% } %>
    <% }) %>
  </div>